{
  "name": "ssml-tsx",
  "description": "SSML (Speech Synthesis Markup Language) JSX & TSX parser and renderer",
  "version": "1.0.10",
  "author": "Yusuke Fujiki <yusuke@fujikkys.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "ssml",
    "jsx",
    "vui"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.1.0",
    "@semantic-release/npm": "9.0.2",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "29.5.12",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.56.0",
    "eslint-config-timetree": "1.7.3",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "npm-run-all2": "6.1.2",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "semantic-release": "19.0.5",
    "ts-jest": "29.1.2",
    "typescript": "5.1.6"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "!dist/__tests__"
  ],
  "homepage": "https://github.com/jubilee-works/ssml-tsx",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "https://github.com/jubilee-works/ssml-tsx",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "formt": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --cache '**/*.{js,jsx,ts,tsx}'",
    "lint:tsc": "tsc --noEmit",
    "prepublishOnly": "run-s clean build",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "jest --watch",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "format": "run-s format:*"
  }
}
