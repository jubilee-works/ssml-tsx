{
  "name": "ssml-tsx",
  "description": "SSML (Speech Synthesis Markup Language) JSX & TSX parser and renderer",
  "version": "1.0.10",
  "author": "Yusuke Fujiki <yusuke@fujikkys.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "ssml",
    "jsx",
    "vui"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.1.1",
    "@semantic-release/npm": "7.0.6",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@types/jest": "26.0.15",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "semantic-release": "17.2.2",
    "ts-jest": "26.4.3",
    "typescript": "4.0.5"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "homepage": "https://github.com/jubilee-works/ssml-tsx",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "https://github.com/jubilee-works/ssml-tsx",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "formt": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --cache '**/*.{js,jsx,ts,tsx}'",
    "lint:tsc": "tsc --noEmit",
    "prepublishOnly": "run-s clean build",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "jest --watch",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "format": "run-s format:*"
  }
}
